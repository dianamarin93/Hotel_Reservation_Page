@page
@model Hotel_Reservation_Project.Pages.Categories.DeleteModel

<form method="post">
    <input hidden asp-for="Info.Id"/>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Delete Reservation</h2>
            <hr/>
        </div>
        
        <div class="mb-3">
            First Name:
            <input asp-for="Info.FirstName" disabled class="form-control"/>
        </div>
        <div class="mb-3">
            Last Name:
            <input asp-for="Info.LastName" disabled class="form-control"/>
        </div>
        <div class="mb-3">
            CNP:
            <input asp-for="Info.CNP" disabled class="form-control"/>
        </div>
        <div class="mb-3">
            Phone Number:
            <input asp-for="Info.PhoneNumber" disabled class="form-control"/>
        </div>
        <div class="mb-3">
            Room Number:
            <input asp-for="Info.RoomNumber" disabled class="form-control"/>
        </div>
        <div class="mb-3">
            Start Date:
            <input asp-for="Info.StartDate" disabled class="form-control"/>
        </div>
        <div class="mb-3">
            End Date:
            <input asp-for="Info.EndDate" disabled class="form-control"/>
        </div>
        <button type="submit" class="btn btn-danger" style="width: 150px;">Delete</button>
        <a asp-page="Index" class="btn btn-secondary" style="width: 150px;">Back To List</a>

    </div>
</form>

@section Scripts
{
    @{
        <partial name="Shared/_ValidationScriptsPartial"/>
    }
}
